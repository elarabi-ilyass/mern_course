<%- include('Components/Header.ejs', {title: 'My Page', Tab: Tab}) %>

<style>
    /* Main container styling */
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
    }

    /* Header styling */
    .main-header {
        text-align: center;
        color: #50fa7b;
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 30px;
        text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.3);
        padding: 20px;
        background: rgba(40, 42, 54, 0.9);
        border-radius: 15px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        transform: translateY(0);
        transition: all 0.3s ease;
    }

    .main-header:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.2);
        color: #8be9fd;
    }

    /* Paragraph styling */
    .intro-text {
        text-align: center;
        color: #f8f8f2;
        font-size: 1.3rem;
        line-height: 1.6;
        margin: 30px 0;
        padding: 20px;
        background: rgba(68, 71, 90, 0.8);
        border-radius: 10px;
        border-left: 4px solid #ff79c6;
    }

    /* People list container */
    .people-container {
        background: rgba(40, 42, 54, 0.9);
        border-radius: 15px;
        padding: 30px;
        margin: 30px 0;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .people-container h2 {
        color: #ff79c6;
        text-align: center;
        font-size: 2rem;
        margin-bottom: 25px;
        border-bottom: 2px solid #6272a4;
        padding-bottom: 10px;
    }

    /* People list styling */
    .people-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 15px;
    }

    .person-item {
        background: linear-gradient(135deg, #44475a, #6272a4);
        padding: 20px;
        border-radius: 10px;
        text-align: center;
        transition: all 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.1);
        position: relative;
        overflow: hidden;
    }

    .person-item::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
        transition: left 0.5s ease;
    }

    .person-item:hover::before {
        left: 100%;
    }

    .person-item:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
        background: linear-gradient(135deg, #6272a4, #44475a);
        border-color: #50fa7b;
    }

    .person-name {
        color: #f8f8f2;
        font-size: 1.2rem;
        font-weight: 600;
        margin: 0;
    }

    .person-id {
        color: #8be9fd;
        font-size: 0.9rem;
        margin-top: 8px;
        opacity: 0.8;
    }

    /* Empty state styling */
    .empty-state {
        text-align: center;
        color: #6272a4;
        font-size: 1.2rem;
        padding: 40px;
        background: rgba(68, 71, 90, 0.5);
        border-radius: 10px;
        border: 2px dashed #6272a4;
    }

    /* Responsive design */
    @media (max-width: 768px) {
        .container {
            padding: 10px;
        }
        
        .main-header {
            font-size: 2rem;
            padding: 15px;
        }
        
        .people-list {
            grid-template-columns: 1fr;
        }
        
        .intro-text {
            font-size: 1.1rem;
            padding: 15px;
        }
    }

    /* Animation for list items */
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .person-item {
        animation: fadeInUp 0.6s ease forwards;
    }

    .person-item:nth-child(1) { animation-delay: 0.1s; }
    .person-item:nth-child(2) { animation-delay: 0.2s; }
    .person-item:nth-child(3) { animation-delay: 0.3s; }
    .person-item:nth-child(4) { animation-delay: 0.4s; }
    .person-item:nth-child(5) { animation-delay: 0.5s; }
</style>

<div class="container">
    <h1 class="main-header">Test EJS in MERN Stack</h1>
    
    <p class="intro-text">This is a paragraph from EJS file demonstrating dynamic content rendering with Express and EJS templating engine.</p>

    <div class="people-container">
        <h2>People List</h2>
        
        <% if (Person && Person.length) { %>
            <ul class="people-list">
                <% Person.forEach(function(item, index) { %>
                    <li class="person-item" style="animation-delay: <%= (index * 0.1) + 0.1 %>s;">
                        <h3 class="person-name"><%= item.nom %></h3>
                        <p class="person-id">ID: <%= item.id %></p>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <div class="empty-state">
                <p>No people data available</p>
            </div>
        <% } %>
    </div>
</div>